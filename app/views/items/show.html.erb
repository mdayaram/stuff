
<p>
  <b>Title:</b>
  <a href="<%= @item.purchase_url %>">
    <%= @item.title %>
  </a>
</p>

<p>
  <b>Description:</b>
  <%= @item.description %>
</p>

<p>
  <b>Img url:</b>
  <%= image_tag @item.img.url(:large) %>
</p>

<p>
  <b>Submitted by:</b>
  <%= @item.submitted_by %>
</p>

<p>
  <b>Approved by:</b>
  <%= @item.approved_by %>
</p>

<p>
  <b>Purchased by:</b>
  <%= @item.purchased_by %>
</p>

<p>
  <b>Cost:</b>
  <%= @item.price %>
</p>

<p>
  <b>Status:</b>
  <%= @item.status %>
</p>

<p>
  <b>Date submitted:</b>
  <%= @item.date_submitted %>
</p>

<p>
  <b>Date purchased:</b>
  <%= @item.date_purchased %>
</p>

<p>
  <b>Date received:</b>
  <%= @item.date_received %>
</p>

<p>
  <b>Date approved:</b>
  <%= @item.date_approved %>
</p>

<%= form_for(@item, :url => purchase_item_path(@item), :html => { :method => 'put' }) do |f| %>
  <div class="actions">
    <%= f.submit "Purchase", :class => "btn"  %>
  </div>
<% end %>

<%= link_to 'Edit', edit_item_path(@item) %> |
<%= link_to 'Back', items_path %>
