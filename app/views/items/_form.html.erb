
<%= semantic_form_for(@item, :html => { :multipart => true }) do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :img, :label => "Image*", :as => :file %>
    <%= f.input :purchase_url %>
    <%= f.input :description %>
    <%= f.input :price %>
  <% end %>
  <%= f.commit_button %>
<% end %>
