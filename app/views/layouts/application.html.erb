<!DOCTYPE html>
<html>
<head>
  <title><%= @title.present? ? @title : 'Stuff to get Noj' %></title>
  <%= stylesheet_link_tag    "application" %>
  <link rel="stylesheet" href="http://twitter.github.com/bootstrap/1.4.0/bootstrap.min.css">
  <%= javascript_include_tag "bootstrap-dropdown" %>
  <%= javascript_include_tag "bootstrap-twipsy" %>
  <%= javascript_include_tag "bootstrap-scrollspy" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>

</head>
<body>
<div class="topbar-wrapper" style="z-index: 5;">
  <div class="topbar" data-dropdown="dropdown">
    <div class="topbar-inner">
    <div class="container">
      <h3><%= link_to "Stuff to get Noj", root_path %></h3>
      <ul class="nav">
        <li><%= link_to "Add Stuff", new_item_path %></li>
        <li><%= link_to "Link2", "#" %></li>
        <li><%= link_to "Link2", "#" %></li>
        <li><%= link_to "Link2", "#" %></li>
        <li><%= link_to "Link2", "#" %></li>
      </ul>
      <ul class="nav secondary-nav">
        <% if current_user %>
          <li class="dropdown">
            <%= link_to current_user.full_name, "#", :class => "dropdown-toggle" %>
            <ul class="dropdown-menu">
              <li><%= link_to "Log out", logout_path %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign up", signup_path %></li>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </div>
    </div>
  </div>
</div>

<div style="padding-top:40px">
<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :class => "alert-message #{name}" %>
<% end %>

<%= yield %>
</div>

</body>
</html>
