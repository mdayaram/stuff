<!DOCTYPE html>
<html>
<head>
  <title><%= @title.present? ? @title : 'Stuff to get Noj' %></title>
  <link rel="stylesheet" href="http://twitter.github.com/bootstrap/1.4.0/bootstrap.min.css">
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "bootstrap-dropdown" %>
  <%= javascript_include_tag "bootstrap-twipsy" %>
  <%= javascript_include_tag "bootstrap-scrollspy" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>

</head>
<body>
<div class="topbar-wrapper" style="z-index: 5;">
  <div class="topbar" data-dropdown="dropdown">
    <div class="topbar-inner">
    <div class="container">
      <h3><%= link_to "Stuff to get Noj", root_path %></h3>
      <ul class="nav">
        <li class="dropdown">
          <%= link_to "Items", "#", :class => "dropdown-toggle" %>
          <ul class="dropdown-menu">
            <li><%= link_to "Available Items", available_items_path %></li>
            <li><%= link_to "Already Purchased", purchased_items_path %></li>
          </ul>
        </li>
        <li><%= link_to "Prizes", "#" %></li>
        <li><%= link_to "About", about_path %></li>
      </ul>
      <ul class="nav secondary-nav">
        <% if current_user %>
          <li class="dropdown">
            <%= link_to current_user.full_name, "#", :class => "dropdown-toggle" %>
            <ul class="dropdown-menu">
              <li><%= link_to "My Purchases", "#" %></li>
              <li><%= link_to "My Prizes", "#" %></li>
              <li><%= link_to "My Account", "#" %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign up", signup_path %></li>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </div>
    </div>
  </div>
</div>

<div style="padding-top:40px">
<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :class => "alert-message #{name}" %>
<% end %>

<div class="container">
<div class="container-fluid">
  <div class="content">
    <%= yield %>
  </div>
  <div class="sidebar">
    <h5 align="center">Current Rankings</h5>
    <div class="rankings">
      <% if top_users.present? %>
      <dl>
      <% top_users.each do |u| %>
        <dt><%= u.points %></dt>
        <dd><%= u.username %></dd>
      <% end %>
      </dl>
      <% else %>
        No top users yet T.T
      <% end %>
    </div>
  </div>
</div>
</div>

</div>

</body>
</html>
